{% set dockersync = false %}
{% if @('host.os') == 'darwin' and @('docker-sync') == 'yes' %}
{% set dockersync = true %}
{% endif %}
version: '3'
services:
{% if @('extra_services') %}
{{ to_yaml(@('extra_services'), 2, 2) | raw }}
{% endif %}
  console:
{% if @('app.build') == 'dynamic' %}
    entrypoint: /entrypoint.dynamic.sh
    volumes:
      - {{ (dockersync) ? @('workspace.name') ~ '-sync:/app:nocopy' : '../:/app:delegated' }}
      - ./skeleton:/home/build/skeleton
{% endif %}
    labels:
      - traefik.enable=false
    build:
      context: ../
      dockerfile: .my127ws/docker/image/console/Dockerfile
{% if @('app.build') == 'static' %}
      args:
        APP_MODE: {{ @('app.mode') }}
{% endif %}
    environment:
{{ to_yaml(@('services.console.environment'), 2, 6) | raw }}
    networks:
      - private

  pm2:
    build: docker/image/pm2
{% if @('app.build') == 'dynamic' %}
    volumes:
      - {{ (dockersync) ? @('workspace.name') ~ '-sync:/app:nocopy' : '../:/app:delegated' }}
{% endif %}
    labels:
{{ to_yaml(@('services.pm2.labels'), 2, 6) | raw }}
    depends_on:
      - console
    environment:
{{ to_yaml(@('services.pm2.environment'), 2, 6) | raw }}
    networks:
      - private
      - shared

networks:
  private:
    external: false
  shared:
    external:
      name: my127ws
{% if dockersync %}
volumes:
  {{ @('workspace.name') }}-sync:
    external: true
{% endif %}
